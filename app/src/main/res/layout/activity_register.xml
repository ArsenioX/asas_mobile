<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa"
    android:padding="16dp"
    tools:context=".RegistrasiActivity">

    <TextView
        android:id="@+id/textViewRegisterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textViewLoginLink"
        android:layout_alignParentTop="true"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="90dp"
        android:text="Register"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextUsernameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRegisterTitle"
        android:layout_marginTop="279dp"
        android:background="@drawable/edit_text_background"
        android:hint="Username"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editTextPasswordRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRegisterTitle"
        android:layout_marginTop="331dp"
        android:background="@drawable/edit_text_background"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editTextUsernameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewRegisterTitle"
        android:layout_marginTop="228dp"
        android:background="@drawable/edit_text_background"
        android:hint="Email"
        android:padding="10dp" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRegisterTitle"
        android:layout_marginTop="392dp"
        android:text="Register"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textViewLoginLink"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonRegister"
        android:layout_alignStart="@+id/editTextUsernameRegister"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="50dp"
        android:text="Already have an account? Login here"
        android:textColor="#3498db"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="103dp"
        android:layout_height="124dp"
        android:layout_below="@+id/textViewRegisterTitle"
        android:layout_alignEnd="@+id/editTextUsernameRegister"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="146dp"
        app:srcCompat="@drawable/shopping" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="132dp"
        android:layout_height="59dp"
        android:layout_below="@+id/textViewRegisterTitle"
        android:layout_alignEnd="@+id/editTextUsernameRegister"
        android:layout_alignParentStart="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="117dp"
        android:text="Welcome RupaCraft" />
</RelativeLayout>
